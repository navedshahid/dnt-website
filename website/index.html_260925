    <div id="chat-window"
      class="fixed bottom-24 right-6 w-96 h-[60vh] bg-slate-900/80 backdrop-blur-xl rounded-2xl z-50 ring-gradient-darker shadow-2xl shadow-violet-500/20 flex-col hidden">

      <div class="flex justify-between items-center p-4 border-b border-slate-700">
