  <style>
    :root {
      --primary-color: #7c3aed;
      --accent-color: #22d3ee;
      /* This is your brand's accent blue */
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      overflow-x: hidden;
    }

    .text-gradient {
      background: linear-gradient(to right, var(--primary-color), var(--accent-color));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .ring-gradient {
      border: 1px solid transparent;
      background-clip: padding-box, border-box;
      background-origin: padding-box, border-box;
      background-image: linear-gradient(to right, theme('colors.slate.950'), theme('colors.slate.950')), linear-gradient(135deg, #7c3aed, #2563eb, #22d3ee);
    }

    .ring-gradient-darker {
      border: 1px solid transparent;
      background-clip: padding-box, border-box;
      background-origin: padding-box, border-box;
      background-image: linear-gradient(to right, theme('colors.slate.900'), theme('colors.slate.900')), linear-gradient(135deg, #7c3aed, #2563eb, #22d3ee);
    }

    /* Animation for elements fading in on scroll */
    .fade-in-section {
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.6s ease-out, transform 0.6s ease-out;
    }

    .fade-in-section.is-visible {
      opacity: 1;
      transform: translateY(0);
    }

    @keyframes spin {
      from {
        transform: rotate(0deg);
      }

      to {
        transform: rotate(360deg);
      }
    }

    .animate-spin {
      animation: spin 1s linear infinite;
    }

    /* Logo specific styles */
    .logo-icon {
      color: var(--accent-color);
      /* Match the accent color */
    }

    /* Header backdrop filter fix for Safari */
    header {
      position: sticky;
      top: 0;
      z-index: 50;
      -webkit-backdrop-filter: blur(8px);
      /* Safari 9+ support */
      backdrop-filter: blur(8px);
      background: rgba(9, 14, 32, 0.55);
      border-bottom: 1px solid rgba(148, 163, 184, .12);
    }

    /* AI Chat Agent Styles */
    #chat-window {
      display: flex;
      flex-direction: column;
      /* Lays out header, messages, and input vertically */
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.3s ease, transform 0.3s ease;
    }

    #chat-window.active {
      opacity: 1;
      transform: translateY(0);
    }

    #chat-messages {
      flex: 1;
      /* This makes the message area grow to fill available space */
      padding: 1rem;
      overflow-y: auto;
      /* THIS ENABLES THE SCROLLBAR */
      display: flex;
      flex-direction: column;
      gap: 1rem;
      /* This adds space between messages */
    }

    .chat-message {
      max-width: 80%;
      padding: 0.75rem 1rem;
      border-radius: 1rem;
      font-size: 0.9rem;
      line-height: 1.4;
      word-wrap: break-word;
    }

    .ai-message {
      background-color: #334155;
      /* slate-700 */
      color: #f1f5f9;
      /* slate-100 */
      align-self: flex-start;
      border-bottom-left-radius: 0.25rem;
    }

    .user-message {
      background-color: #7c3aed;
      /* primary-color */
      color: white;
      margin-left: auto;
      /* Aligns to the right */
      border-bottom-right-radius: 0.25rem;
    }

    .typing-indicator {
      display: flex;
      align-items: center;
      padding: 0.75rem 1rem;
      align-self: flex-start;
    }

    .typing-indicator span {
      height: 8px;
      width: 8px;
      background-color: #94a3b8;
      /* slate-400 */
      border-radius: 50%;
      margin: 0 2px;
      animation: bounce 1.4s infinite ease-in-out both;
    }

    .typing-indicator span:nth-child(1) {
      animation-delay: -0.32s;
    }

    .typing-indicator span:nth-child(2) {
      animation-delay: -0.16s;
    }

    @keyframes bounce {

      0%,
      80%,
      100% {
        transform: scale(0);
      }

      40% {
        transform: scale(1.0);
      }
    }
  </style>
</head>

