        <path d="M17.5 12a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
        <path d="M17.5 12h2.5" />
        <path d="M12 17.5v2.5" />
        <path d="M6.5 12H4" />
        <path d="M12 6.5V4" />
        <path d="m4.22 7.78 1.42-1.42" />
        <path d="m18.36 18.36 1.42-1.42" />
        <path d="m19.78 7.78-1.42-1.42" />
        <path d="m5.64 18.36-1.42-1.42" />
