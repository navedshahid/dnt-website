                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
              </button>
              <button type="submit" class="w-full bg-gradient-to-r from-violet-600 to-indigo-500 text-white font-semibold px-4 py-3 rounded-full shadow-lg hover:shadow-violet-500/50 transition-all duration-300 transform hover:scale-105">
                Send Message
              </button>
            </div>
            <p id="formStatus" class="text-sm text-center text-violet-400 mt-2" aria-live="polite"></p>
          </form>
        </div>
      </div>
    </section>
  </main>

  <footer class="py-8 md:py-12 text-center text-sm text-slate-500 border-t border-slate-800">
    <div class="container mx-auto px-4">
      <p>&copy; <span id="year"></span> Digital Natives. All rights reserved.</p>
    </div>
  </footer>

  <div id="mobile-menu-drawer" class="fixed inset-y-0 right-0 w-64 bg-slate-900 z-50 transform translate-x-full transition-transform duration-300 ease-in-out shadow-lg p-6">
    <div class="flex justify-end">
      <button id="menu-close" class="p-2 text-slate-400 hover:text-white transition-colors" aria-label="Close menu">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
      </button>
    </div>
    <nav class="mt-8 flex flex-col items-start space-y-4">
      <a href="#about" class="text-lg font-semibold text-slate-200 hover:text-violet-400 transition-colors" data-close-menu>Why Us</a>
      <a href="#services" class="text-lg font-semibold text-slate-200 hover:text-violet-400 transition-colors" data-close-menu>Services</a>
      <a href="#projects" class="text-lg font-semibold text-slate-200 hover:text-violet-400 transition-colors" data-close-menu>Projects</a>
      <a href="#tech" class="text-lg font-semibold text-slate-200 hover:text-violet-400 transition-colors" data-close-menu>Tech</a>
      <a href="#contact" class="text-lg font-semibold text-slate-200 hover:text-violet-400 transition-colors" data-close-menu>Contact</a>
      <a href="https://calendly.com/hello-digitalnatives" target="_blank" rel="noopener noreferrer" class="w-full text-center bg-gradient-to-r from-violet-600 to-indigo-500 text-white font-semibold px-4 py-2 rounded-full mt-4" data-close-menu>Book a Meeting</a>
    </nav>
  </div>
  

  <div id="backdrop" class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden transition-opacity duration-300"></div>
<div id="chat-widget-container">
  <button id="chat-bubble" class="fixed bottom-6 right-6 bg-gradient-to-r from-violet-600 to-indigo-500 text-white rounded-full p-4 shadow-lg hover:scale-110 transition-transform duration-200 z-50">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17.5 12a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/><path d="M17.5 12h2.5"/><path d="M12 17.5v2.5"/><path d="M6.5 12H4"/><path d="M12 6.5V4"/><path d="m4.22 7.78 1.42-1.42"/><path d="m18.36 18.36 1.42-1.42"/><path d="m19.78 7.78-1.42-1.42"/><path d="m5.64 18.36-1.42-1.42"/></svg>
  </button>

  <div id="chat-window" class="fixed bottom-24 right-6 w-96 h-[60vh] bg-slate-900/80 backdrop-blur-xl rounded-2xl shadow-2xl z-50 ring-gradient-darker flex-col hidden">
    <div class="flex justify-between items-center p-4 border-b border-slate-700">
      <div class="flex items-center space-x-3">
        <img src="assets/logo-color.png" alt="Logo" class="h-8 w-auto">
        <h3 class="font-bold text-white">AI Assistant</h3>
      </div>
      <button id="close-chat-window" class="text-slate-400 hover:text-white">&times;</button>
    </div>
    <div id="chat-messages" class="flex-1 p-4 overflow-y-auto space-y-4">
      <div class="chat-message ai-message">
        <p>Hello! I'm the AI assistant for Digital Natives. How can I help you learn about our services today?</p>
      </div>
    </div>
    <div class="p-4 border-t border-slate-700">
      <form id="chat-form" class="flex items-center space-x-2">
        <input type="text" id="chat-input" placeholder="Ask about our services..." class="w-full p-2 rounded-lg bg-slate-800 border border-slate-700 focus:ring-2 focus:ring-violet-500 outline-none transition-colors duration-200 text-sm" autocomplete="off">
        <button type="submit" class="bg-violet-600 text-white p-2 rounded-lg hover:bg-violet-700 transition-colors">Send</button>
      </form>
    </div>
  </div>
</div>
  <script>
document.addEventListener('DOMContentLoaded', () => {
    // Set footer year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Mobile Menu Logic
    const menuToggle = document.getElementById('menu-toggle');
    const menuClose = document.getElementById('menu-close');
    const mobileMenuDrawer = document.getElementById('mobile-menu-drawer');
    const backdrop = document.getElementById('backdrop');
    const body = document.body;
    function openMenu() { mobileMenuDrawer.classList.remove('translate-x-full'); backdrop.classList.remove('hidden'); body.style.overflow = 'hidden'; }
    function closeMenu() { mobileMenuDrawer.classList.add('translate-x-full'); backdrop.classList.add('hidden'); body.style.overflow = ''; }
    menuToggle.addEventListener('click', openMenu);
    menuClose.addEventListener('click', closeMenu);
    backdrop.addEventListener('click', closeMenu);
    document.querySelectorAll('[data-close-menu]').forEach(link => { link.addEventListener('click', closeMenu); });
    
    // Header scroll effect
    const header = document.querySelector('header');
    window.addEventListener('scroll', () => { header.classList.toggle('bg-slate-950/80', window.scrollY > 50); });

    // Fade-in effect on scroll
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => { if (entry.isIntersecting) { entry.target.classList.add('is-visible'); } });
    }, { threshold: 0.1 });
    document.querySelectorAll('.fade-in-section').forEach(section => { observer.observe(section); });

    const form = document.getElementById('contactForm');
    const formStatusEl = document.getElementById('formStatus');
    const messageEl = document.getElementById('message');

    // ===================================================================
    // =================== CONTACT FORM LOGIC ============================
    // ===================================================================
    if (form) {
      const sendButton = form.querySelector('button[type="submit"]');
      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const workerUrl = 'https://contact.digitalnatives.work/';
        
        const originalButtonText = sendButton.innerHTML;
        sendButton.disabled = true;
        sendButton.innerHTML = 'Sending...';
        formStatusEl.textContent = '';

        const formData = new FormData(form);
        const data = {
          name: formData.get('name'),
          email: formData.get('email'),
          message: formData.get('message'),
        };

        try {
          const response = await fetch(workerUrl, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data),
          });

          if (!response.ok) throw new Error('Network response was not ok.');
          
          formStatusEl.textContent = 'Thank you! Your message has been sent.';
          form.reset();

        } catch (error) {
          console.error('Form submission error:', error);
          formStatusEl.textContent = 'Sorry, there was an error. Please try again.';
        } finally {
          sendButton.disabled = false;
          sendButton.innerHTML = originalButtonText;
          setTimeout(() => { formStatusEl.textContent = ''; }, 5000);
        }
      });
    }
    
    // ===================================================================
    // =================== REFINE PROJECT IDEA LOGIC =====================
    // ===================================================================
    const generateIdeaBtn = document.getElementById('generateIdeaBtn');
    const buttonTextEl = document.getElementById('buttonText');
    const loadingSpinnerEl = document.getElementById('loadingSpinner');

    const showLoading = () => {
      buttonTextEl.textContent = 'Thinking...';
      loadingSpinnerEl.classList.remove('hidden');
      generateIdeaBtn.disabled = true;
      formStatusEl.textContent = '';
    };

    const hideLoading = () => {
      buttonTextEl.textContent = '✨ Refine with AI';
      loadingSpinnerEl.classList.add('hidden');
      generateIdeaBtn.disabled = false;
    };

    async function generateProjectIdea() {
      const userMessage = messageEl.value.trim();
      if (userMessage === '') {
        formStatusEl.textContent = 'Please enter a brief idea in the message box first.';
        return;
      }
      showLoading();

      const workerUrl = 'https://idearefiner.digitalnatives.work';

      try {
        const response = await fetch(workerUrl, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ prompt: userMessage })
        });

        if (!response.ok) {
          throw new Error(`Server Error: ${response.statusText}`);
        }

        const result = await response.json();
        const generatedText = result.text || "Failed to generate a project idea.";

        messageEl.value = generatedText;
        formStatusEl.textContent = 'Project idea refined! Feel free to edit or send.';

      } catch (error) {
        console.error('Error refining project idea:', error);
        formStatusEl.textContent = 'Error: Could not refine the project idea. Please try again.';
      } finally {
        hideLoading();
      }
    }

    if (generateIdeaBtn) {
        generateIdeaBtn.addEventListener('click', generateProjectIdea);
    }
  });
</script>
</body>
</html>