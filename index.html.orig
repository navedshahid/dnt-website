  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Set footer year
      document.getElementById('year').textContent = new Date().getFullYear();

      // Mobile Menu Logic
      const menuToggle = document.getElementById('menu-toggle');
      const menuClose = document.getElementById('menu-close');
      const mobileMenuDrawer = document.getElementById('mobile-menu-drawer');
      const backdrop = document.getElementById('backdrop');
      const body = document.body;

      function openMenu() {
        mobileMenuDrawer.classList.remove('translate-x-full');
        backdrop.classList.remove('hidden');
        body.style.overflow = 'hidden';
      }

      function closeMenu() {
        mobileMenuDrawer.classList.add('translate-x-full');
        backdrop.classList.add('hidden');
        body.style.overflow = '';
      }

      menuToggle.addEventListener('click', openMenu);
      menuClose.addEventListener('click', closeMenu);
      backdrop.addEventListener('click', closeMenu);
      document.querySelectorAll('[data-close-menu]').forEach(link => {
        link.addEventListener('click', closeMenu);
      });
      
      // Header scroll effect
      const header = document.querySelector('header');
      window.addEventListener('scroll', () => {
        header.classList.toggle('bg-slate-950/80', window.scrollY > 50);
      });

      // Fade-in effect on scroll
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
          }
        });
      }, { threshold: 0.1 });

      document.querySelectorAll('.fade-in-section').forEach(section => {
        observer.observe(section);
      });

      // Contact Form Logic
      const form = document.getElementById('contactForm');
      const formStatusEl = document.getElementById('formStatus');
      const generateIdeaBtn = document.getElementById('generateIdeaBtn');
      const messageEl = document.getElementById('message');
      const buttonTextEl = document.getElementById('buttonText');
      const loadingSpinnerEl = document.getElementById('loadingSpinner');

      if (form) {
        form.addEventListener('submit', (e) => {
          e.preventDefault();
          // Replace with actual form submission logic (e.g., to Netlify, Formspree, or your backend)
          formStatusEl.textContent = 'Thank you! Your message has been sent.';
          form.reset();
          setTimeout(() => formStatusEl.textContent = '', 3000);
        });
      }

      const showLoading = () => {
        buttonTextEl.textContent = 'Thinking...';
        loadingSpinnerEl.classList.remove('hidden');
        generateIdeaBtn.disabled = true;
        formStatusEl.textContent = '';
      };

      const hideLoading = () => {
        buttonTextEl.textContent = '✨ Refine with AI';
        loadingSpinnerEl.classList.add('hidden');
        generateIdeaBtn.disabled = false;
      };

      async function generateProjectIdea() {
        const userMessage = messageEl.value.trim();
        if (userMessage === '') {
          formStatusEl.textContent = 'Please enter a brief idea in the message box first.';
          return;
        }

        showLoading();
        
        // ===================================================================
        // IMPORTANT SECURITY NOTE:
        // NEVER expose your API key on the client-side (in the browser).
        // The original code had the API key in the JavaScript.
        // This has been changed to call a backend endpoint that you will create.
        // Your backend server will securely hold the API key and make the call to the Google API.
        // ===================================================================

        try {
          const response = await fetch('/api/refine-idea', { // This is your new backend endpoint
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ prompt: userMessage })
          });

          if (!response.ok) {
            throw new Error(`Server Error: ${response.statusText}`);
          }

          const result = await response.json();
          const generatedText = result.text || "Failed to generate a project idea.";
          
          messageEl.value = generatedText;
          formStatusEl.textContent = 'Project idea refined! Feel free to edit or send.';

        } catch (error) {
          console.error('Error refining project idea:', error);
          formStatusEl.textContent = 'Error: Could not refine the project idea. Please try again.';
        } finally {
          hideLoading();
        }
      }

      generateIdeaBtn.addEventListener('click', generateProjectIdea);
    });
  </script>
</body>
</html>